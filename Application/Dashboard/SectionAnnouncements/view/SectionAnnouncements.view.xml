<mvc:View controllerName="schapp.Application.Dashboard.SectionAnnouncements.controller.SectionAnnouncements" 
    xmlns:l="sap.ui.layout" 
    xmlns:core="sap.ui.core" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m" 
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Page visible="true" enableScrolling="true" showHeader="false">
        <content>
            <VBox alignItems="Center" justifyContent="Start" width="100%" height="100%">
                <VBox width="50%" alignItems="Stretch" justifyContent="Start">
                    <Toolbar height="2rem">
                        <HBox alignItems="Center" justifyContent="Start">
                            <core:Icon src="sap-icon://marketing-campaign" color="#325e86" size="18px"></core:Icon>
                            <Title text="Duyurular"/>
                        </HBox>
                    </Toolbar>
                    <HBox alignItems="Start" justifyContent="Stretch">
                    <Label text="{/announcements/0/notice}"  wrapping="true"/>
                    </HBox>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
